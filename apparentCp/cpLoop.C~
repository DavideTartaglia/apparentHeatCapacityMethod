#ifndef MY_CP_LOOP_H
#define MY_CP_LOOP_H

#include "fvCFD.H"  // Giusto??

class cpLoop
{
public:
  void calculateEnthalpy()
  {
    forAll(mesh.C(),i)
      {
	if (T[i]<Tm.value())
	  {
	    e[i] = cp_s.value()*T[i];
	  }
	else if (T[i]>=Tm.value())
	  {
	    e[i] = cp_l.value()*T[i] + L.value();
	  }
      }
  }
};

#endif
